<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_write"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="애국가 가사 웅장하지 않냐?"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="30dp"
                android:maxLines="2"
                android:lineSpacingMultiplier="1.5"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관악구 고3"
                    android:textColor="@color/colorMain"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"/>
                <TextView
                    android:id="@+id/detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021/05/13"
                    android:textColor="#A3A3A3"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동해 물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라 만세. 무궁화 삼천리 화려 강산 대한 사람, 대한으로 길이 보전하세."
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:textColor="#4C4C4C"
                    android:paddingTop="20dp"
                    android:maxLines="10"
                    android:lineSpacingMultiplier="1.5"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">
                <!--<CheckBox
                    android:button="@null"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/like_checkbox"
                    android:id="@+id/postDetail_like_check"/>
                <TextView
                    android:id="@+id/detail_likeCount"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="14dp" /> -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chat"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/detail_chatCount"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="14dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D8D8"
                android:layout_marginTop="18dp"/>
            <TextView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D8D8D8"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="15dp"
                android:scrollbars="none"
                android:layout_marginTop="20dp"
                android:id="@+id/commentlist"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#F4F4F4">
        <EditText
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:hint="댓글 내용을 입력하세요"
            android:background="@null"
            android:textColorHint="#8C8C8C"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#4A4A4A"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/btnComment"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/send"
            android:background="@drawable/background_btn_reg"
            android:text="등록하기"
            android:textStyle="bold"
            android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>
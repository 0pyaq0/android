<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/layout_mypage"
    tools:context=".fragment.MyPageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            tools:ignore="Orientation">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:src="@drawable/user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/my_page_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/profile"
                    android:layout_toRightOf="@id/profile"
                    android:fontFamily="@font/notosanskrbold"
                    android:text="234"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/my_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_page_user_name"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="@font/notosanskrmedium"
                    android:textColor="@color/colorMain"
                    android:textSize="15dp" />
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnLikeList"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="20dp"
                    android:background="#00ff0000"
                    android:stateListAnimator="@null"
                    android:text="최근 찜한 글  >"
                    android:textColor="#A8A8A8"
                    android:textSize="14sp" />
            </LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/background_button"
                android:drawableLeft="@drawable/mypage_button1"
                android:drawablePadding="27dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:text="공지사항"
                android:textColor="#000000"
                android:textSize="16dp" />


            <Button
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/background_button"
                android:drawableLeft="@drawable/mypage_button2"
                android:drawablePadding="27dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:text="학교 변경"
                android:textColor="#000000"
                android:textSize="16dp" />

            <Button
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/background_button"
                android:drawableLeft="@drawable/mypage_button3"
                android:drawablePadding="27dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:text="버전 정보"
                android:textColor="#000000"
                android:textSize="16dp" />


            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/background_button"
                android:drawableLeft="@drawable/mypage_button4"
                android:drawablePadding="27dp"
                android:gravity="left|center_vertical"
                android:padding="20dp"
                android:text="로그아웃"
                android:textColor="#000000"
                android:textSize="16dp" />

            <Button
                android:id="@+id/withdrawal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/background_button"
                android:drawableLeft="@drawable/mypage_button5"
                android:drawablePadding="22dp"
                android:gravity="left|center_vertical"
                android:padding="18dp"
                android:text="회원탈퇴"
                android:textColor="#000000"
                android:textSize="16dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>